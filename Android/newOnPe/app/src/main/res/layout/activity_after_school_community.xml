<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/after_school_community_drawerlayout"
        tools:context=".page.home.class_community_menu_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="894"
            android:background="@color/white"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/view_bottom_line"
        >
            <ImageView

                    android:id="@+id/after_school_community_back_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/back_button_image"
                    android:padding="18dp"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="커뮤니케이션"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#404040"
                    android:textStyle="normal"

            />
            <ImageView
                    android:id="@+id/after_school_community_side_menu_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/menu_button"
                    android:padding="20dp"
            />


        </LinearLayout>



        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
        />



        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="90"
                android:background="@drawable/view_main_color_round_edge"
        >



            <LinearLayout
                    android:id="@+id/community_button_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="90"
                    android:orientation="horizontal"
                    android:weightSum="377"

            >
                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="25"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="300"
                        android:layout_height="match_parent"
                        android:text="학급 커뮤니티"
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:gravity="center_vertical"

                />

                <ImageView android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="28"
                           android:gravity="center"
                           android:layout_gravity="center"
                           app:srcCompat="@drawable/side_menu_right_image"
                />

                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="20"
                />

            </LinearLayout>




        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="90"
                android:background="@drawable/view_main_color_round_edge"
        >



            <LinearLayout
                    android:id="@+id/message_button_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="90"
                    android:orientation="horizontal"
                    android:weightSum="377"

            >
                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="25"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="300"
                        android:layout_height="match_parent"
                        android:text="메세지"
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:gravity="center_vertical"

                />

                <ImageView android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="28"
                           android:gravity="center"
                           android:layout_gravity="center"
                           app:srcCompat="@drawable/side_menu_right_image"
                />

                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="20"
                />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/after_school_community_child_drawerlayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"
        android:layout_gravity="right"

        >


        <include layout="@layout/activity_side_menu"
            android:id="@+id/side_menu_layout_after_school_community"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>