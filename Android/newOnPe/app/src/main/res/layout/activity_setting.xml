<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/setting_drawerlayout"
        tools:context=".page.setting.SettingPage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="894"
            android:orientation="vertical"
            android:background="@color/white"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/view_bottom_line"
        >
            <ImageView

                    android:id="@+id/setting_page_back_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/back_button_image"
                    android:padding="18dp"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="환경설정"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#404040"
                    android:textStyle="normal"

            />
            <ImageView
                    android:id="@+id/setting_side_menu_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/menu_button"
                    android:padding="20dp"
            />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="65"
                android:weightSum="414"
        >
           <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
           >

               <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:textSize="16dp"
                       android:text="PUSH 알림"
                       android:textStyle="normal"
                       android:fontFamily="@font/notosanscjkkr_medium"
                       android:includeFontPadding="false"
                       android:gravity="center_vertical"
                       android:textColor="#404040"
                       app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView"/>


               <Switch
                       android:id="@+id/setting_page_switch_button"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       android:switchMinWidth="40dp"
                       android:thumb="@drawable/bg_default_switch_thumb"
               />


           </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="6"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="65"
                android:weightSum="414"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="서비스 버전"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:textColor="#404040"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView2"/>

                <TextView
                        android:id="@+id/setting_page_version_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:text="1.0.1"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:textColor="#404040"
                        android:layout_marginRight="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/setting_page_update_button_textview"/>


                <TextView
                        android:id="@+id/setting_page_update_button_textview"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/white"
                          android:text="업데이트"
                          android:background="@drawable/view_main_color_round_button"
                          android:fontFamily="@font/notosanscjkkr_medium"
                          android:textSize="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                          android:paddingLeft="7dp"
                          android:paddingRight="7dp"
                          android:includeFontPadding="false"
                          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="6"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="65"
                android:weightSum="414"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="서비스 약관"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:textColor="#404040"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView
                        android:id="@+id/setting_page_regulation_button_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/join_gray"
                        android:text="약관보기"
                        android:background="@drawable/view_gray_color_2_round_edge"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textSize="13dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="6"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="65"
                android:weightSum="414"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="서비스 탈퇴"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:textColor="#404040"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView
                        android:id="@+id/setting_page_withdraw_button_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/join_gray"
                        android:text="탈퇴하기"
                        android:background="@drawable/view_gray_color_2_round_edge"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textSize="13dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="6"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="65"
                android:weightSum="414"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="서비스 문의"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:textColor="#404040"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/join_gray"
                        android:text="complexion@complexion.co.kr"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textSize="13dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="6"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="65"
            android:weightSum="414"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:text="   로그아웃   "
                    android:textStyle="normal"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:textColor="#404040"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView
                    android:id="@+id/setting_page_logout_button_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/join_gray"
                    android:text="로그아웃"
                    android:background="@drawable/view_gray_color_2_round_edge"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_child_drawerlayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"
        android:layout_gravity="right"

        >


        <include layout="@layout/activity_side_menu"
            android:id="@+id/side_menu_layout_setting"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>