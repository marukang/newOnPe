<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/class_unit_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="896"
    tools:context=".page.home.class_unit.class_unit_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="896"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:background="@drawable/view_bottom_line"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/class_unit_back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:padding="18dp"
                app:srcCompat="@drawable/back_button_image" />

            <TextView
                android:id="@+id/class_unit_title_textview"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="60"
                android:ellipsize="end"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:singleLine="true"
                android:text="저글링 성공하기 1차시"
                android:textColor="#404040"
                android:textSize="18dp"
                android:textStyle="normal"

                />

            <ImageView
                android:id="@+id/class_unit_menu_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:padding="20dp"
                app:srcCompat="@drawable/menu_button" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="756"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#f9f9f9"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/red_circle" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10dp"
                        android:text="기간 : "
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:textStyle="normal"


                        />

                    <TextView
                        android:id="@+id/class_unit_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="5dp"
                        android:text="2021.05.04 , 18:00"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:textStyle="normal"

                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="414">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="56"
                        android:background="@drawable/view_main_color_round_button"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="과제"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="normal"

                            />

                        <TextView
                            android:id="@+id/class_unit_content_home_work_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="normal"

                            />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="56"
                        android:background="@drawable/view_main_color_round_button"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="평가"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="normal"

                            />

                        <TextView
                            android:id="@+id/class_unit_content_test_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="normal"

                            />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="76" />

                    <LinearLayout
                        android:id="@+id/class_unit_class_state_linearlayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="87"
                        android:background="@drawable/view_main_color_2_round_button"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            app:srcCompat="@drawable/search_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"
                            android:text="수업현황"
                            android:textColor="@color/main_color"
                            android:textSize="13dp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:id="@+id/class_unit_message_linearlayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="87"
                        android:background="@drawable/view_main_color_2_round_button"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            app:srcCompat="@drawable/message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"
                            android:text="메세지함"
                            android:textColor="@color/main_color"
                            android:textSize="13dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f9f9f9" />

                <TextView
                    android:id="@+id/class_unit_content_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:minHeight="180dp"
                    android:padding="20dp"
                    android:text="여러분 ^^ 이번 수업은 농구입니다.\n 제출 기간을 엄수해주세요."
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f9f9f9" />


                <LinearLayout
                    android:id="@+id/class_unit_file_button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="90"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="참고 자료"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/class_unit_file_imageview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="3dp"
                        app:srcCompat="@drawable/main_color_down_button" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/class_unit_file_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f9f9f9" />

                <LinearLayout
                    android:id="@+id/class_unit_youtube_button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="90"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="유튜브 영상"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/class_unit_youtube_imageview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="3dp"
                        app:srcCompat="@drawable/main_color_down_button" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/class_unit_youtube_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/class_unit_youtube_view_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <me.relex.circleindicator.CircleIndicator2
                        android:id="@+id/class_unit_youtube_circleindicator"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:ci_drawable="@drawable/main_color_circle"
                        app:ci_drawable_unselected="@drawable/gray_circle"
                        app:ci_gravity="center"
                        app:ci_height="5dp"
                        app:ci_orientation="horizontal"
                        app:ci_width="5dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f9f9f9" />

                <LinearLayout
                    android:id="@+id/class_unit_link_button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="90"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="수업 관련 링크"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/class_unit_link_imageview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:padding="3dp"
                        app:srcCompat="@drawable/main_color_down_button" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/class_unit_link_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f9f9f9" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/class_unit_start_button_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:background="@color/gray"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"
            android:text="시작하기"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_unit_child_drawerlayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"

        >


        <include
            android:id="@+id/side_menu_layout_class_unit"
            layout="@layout/activity_side_menu"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>