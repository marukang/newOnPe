<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/codeInputFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="10dp"
            android:text="@string/my_class_guide_text1"
            android:fontFamily="@font/notosans_kr_bold"
            android:textColor="@color/black"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11.9dp"
            android:textColor="#404040"
            android:text="@string/my_class_guide_text2"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/view_gray_color_round_edge">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:hint="강좌 코드를 입력해주세요"
                android:background="@null"/>

        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="등록하기"
            android:layout_marginTop="12dp"
            android:elevation="5dp"
            android:background="@drawable/view_main_color_round_button"
            android:textColor="@color/white"/>

    </LinearLayout>

</FrameLayout>