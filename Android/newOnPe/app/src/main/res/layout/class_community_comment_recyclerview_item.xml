<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
    >

        <TextView
                android:id="@+id/comment_user_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="#404040"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textSize="16dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u00b7"
                android:textColor="#777777"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
        />
        <TextView
                android:id="@+id/comment_write_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2021-01-03 "
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            >
         <TextView
             android:id="@+id/comment_delete_button_textview"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="삭제"
             android:textColor="@color/main_color"
             android:fontFamily="@font/notosanscjkkr_medium"
             android:includeFontPadding="false"
             android:gravity="center"
             android:layout_gravity="center_vertical"
             android:textSize="13dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
            />

        </LinearLayout>




    </LinearLayout>

    <TextView
      android:id="@+id/comment_user_comment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="normal"
      android:fontFamily="@font/notosanscjkkr_medium"
      android:text="자료 좋습니다."
      android:textColor="#404040"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="5dp"
      android:textSize="16dp"
      android:layout_marginBottom="10dp"
    />

    <View
     android:layout_width="match_parent"
     android:layout_height="2dp"
     android:background="#f1f1f1"
    />

</androidx.appcompat.widget.LinearLayoutCompat>