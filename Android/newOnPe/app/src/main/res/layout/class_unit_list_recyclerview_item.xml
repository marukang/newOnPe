<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"

>
     <LinearLayout
             android:id="@+id/class_unit_list_parent_linearlayout"
             android:layout_width="match_parent"
             android:layout_height="90dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:orientation="vertical"
             android:background="@drawable/view_main_color_round_edge"
     >
         <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:weightSum="377"
          android:layout_marginTop="9dp"
          android:orientation="horizontal"
         >

                <View
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="25"
                />

                <TextView
                 android:id="@+id/class_unit_list_date_textview"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="251"
                 android:text="2021.05.04 18:00"
                 android:gravity="center_vertical"
                 android:fontFamily="@font/notosanscjkkr_medium"
                 android:includeFontPadding="false"
                 android:textColor="#3f3f3f"

                />

                <LinearLayout
                  android:id="@+id/class_unit_list_state_linearlayout"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="87"
                  android:background="@drawable/view_main_color_round_edge"
                  android:weightSum="87"
                  android:gravity="center"
                >

                    <ImageView
                        android:id="@+id/class_unit_list_state_search_imageview"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:src="@drawable/main_color_search_button"

                        />

                <TextView
                    android:id="@+id/class_unit_list_state_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_color"
                    android:text="수업 현황"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:paddingLeft="3dp"

                />



                </LinearLayout>


                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                />
         </LinearLayout>

         <LinearLayout
                 android:paddingTop="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:orientation="horizontal"
                 android:weightSum="377"
         >

             <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="25"
             />

             <TextView
                       android:id="@+id/class_unit_list_title_textview"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="310"
                       android:textSize="16dp"
                       android:text="[1차시] 공다루기 수업"
                       android:fontFamily="@font/notosanscjkkr_medium"
                       android:includeFontPadding="false"
                       android:textColor="@color/main_color"
                       android:gravity="center_vertical"
             />
             <ImageView
                     android:id="@+id/class_unit_list_right_arrow_imagview"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     app:srcCompat="@drawable/right_arrow_main_color"
                     android:layout_weight="33"
                     android:padding="7dp"
             />




             <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="9"
             />

         </LinearLayout>



     </LinearLayout>


</LinearLayout>