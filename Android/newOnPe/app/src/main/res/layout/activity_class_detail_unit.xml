<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/class_detail_unit_drawerlayout"
    tools:context=".page.home.class_unit.class_detail_unit.class_detail_unit_Activity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="896"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="@drawable/view_bottom_line"
            >
            <ImageView
                android:id="@+id/class_detail_unit_back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                app:srcCompat="@drawable/back_button_image"
                android:padding="18dp"
                />

            <TextView
                android:id="@+id/class_detail_unit_title_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="수업 이름 명 "
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#404040"
                android:textStyle="normal"
                android:ellipsize="end"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/class_detail_unit_menu_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                app:srcCompat="@drawable/menu_button"
                android:padding="20dp"
                />


        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:background="#f9f9f9"
            android:gravity="center_vertical"
            >
            <ImageView
                app:srcCompat="@drawable/red_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:text="기간 : "
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:includeFontPadding="false"


                />
            <TextView
                android:id="@+id/class_detail_unit_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:text="2021.05.04 , 18:00"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:includeFontPadding="false"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:weightSum="414"
            android:orientation="horizontal"
            >
            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="56"
                android:background="@drawable/view_main_color_round_button"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="과제"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/class_detail_unit_homework_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="0"
                    android:paddingLeft="3dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"

                    />

            </LinearLayout>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="56"
                android:background="@drawable/view_main_color_round_button"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="평가"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/class_detail_unit_test_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="0"
                    android:paddingLeft="3dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"

                    />

            </LinearLayout>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="76"
                />

            <LinearLayout
                android:id="@+id/class_detail_unit_state_linearlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="87"
                android:background="@drawable/view_main_color_2_round_button"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    app:srcCompat="@drawable/search_button"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_color"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="수업현황"
                    android:paddingLeft="3dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>


            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                />

            <LinearLayout
                android:id="@+id/class_detail_unit_message_linearlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="87"
                android:background="@drawable/view_main_color_2_round_button"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    app:srcCompat="@drawable/message"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_color"
                    android:textSize="13dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:text="메세지함"
                    android:paddingLeft="3dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f9f9f9"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_detail_unit_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="524"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f9f9f9"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"

            />

        <TextView
            android:id="@+id/class_detail_unit_show_result_button_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:textColor="@color/main_color"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="결과보기"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:includeFontPadding="false"
            android:background="@drawable/view_main_color_round_edge"

            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"

            />

        <TextView
            android:id="@+id/class_detail_unit_submit_button_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:textColor="@color/join_gray"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="최종 제출"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/view_gray_color_2_round_edge"
            android:visibility="invisible"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_detail_unit_child_drawerlayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"
        android:layout_gravity="right"

        >


        <include layout="@layout/activity_side_menu"
            android:id="@+id/side_menu_layout_class_detail_unit"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>