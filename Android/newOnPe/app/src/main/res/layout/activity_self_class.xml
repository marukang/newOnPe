<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/self_class_drawerlayout"
        tools:context=".page.management.self_class_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:weightSum="896"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/view_bottom_line"
        >
            <ImageView
                    android:id="@+id/self_class_back_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/back_button_image"
                    android:padding="18dp"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="SELF 체육수업"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#404040"
                    android:textStyle="normal"

            />
            <ImageView
                    android:id="@+id/self_class_side_menu_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/menu_button"
                    android:padding="20dp"
            />


        </LinearLayout>



        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
        />

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="120"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="90"
                android:background="@drawable/view_main_color_round_edge"
        >




        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="교육부 추천"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textSize="13dp"
                android:textStyle="normal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="@drawable/view_main_color_round_button"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="377"

        >
         <View android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="25"
         />

          <TextView
                  android:layout_width="0dp"
                  android:layout_weight="300"
                  android:layout_height="match_parent"
                  android:text="오늘의 수업"
                  android:textColor="@color/main_color"
                  android:fontFamily="@font/notosanscjkkr_medium"
                  android:includeFontPadding="false"
                  android:textStyle="normal"
                  android:textSize="16dp"
                  android:gravity="center_vertical"

          />

            <ImageView android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="28"
                       android:layout_gravity="center"
                       app:srcCompat="@drawable/side_menu_right_image"
            />

            <View android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="20"
            />

        </LinearLayout>




        </FrameLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="120"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="90"
                android:background="@drawable/view_main_color_round_edge"
        >



            <LinearLayout
                    android:id="@+id/self_class_custom_class_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="90"
                    android:orientation="horizontal"
                    android:weightSum="377"

            >
                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="25"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="300"
                        android:layout_height="match_parent"
                        android:text="나만의 조합 만들기 "
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:gravity="center_vertical"

                />

                <ImageView android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="28"
                           android:gravity="center"
                           android:layout_gravity="center"
                           app:srcCompat="@drawable/side_menu_right_image"
                />

                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="20"
                />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/self_class_child_drawerlayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"
        android:layout_gravity="right"

        >


        <include layout="@layout/activity_side_menu"
            android:id="@+id/side_menu_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>