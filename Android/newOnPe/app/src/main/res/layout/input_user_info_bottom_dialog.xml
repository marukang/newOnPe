<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/input_user_info_bottom_dialog_linearlayout"
  >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >

                <LinearLayout
                    android:id="@+id/bottom_dialog_add_user_info_input_introduction_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:background="@drawable/view_gray_color_round_edge"
                    >
                    <EditText
                        android:id="@+id/bottom_dialog_add_user_info_input_introduction_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:gravity="top"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_weight="100"
                        android:background="@null"
                        android:padding="20dp"
                        android:layout_gravity="top"
                        android:hint="좌우명을 60자 이내로 입력해주세요."
                        android:maxLength="60"

                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_dialog_add_user_info_input_introduction_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좌우명"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="44dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#404040"
                    android:background="@color/white"

                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:id="@+id/bottom_dialog_add_user_info_input_height_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:background="@drawable/view_gray_color_round_edge"
                    >
                    <EditText
                        android:id="@+id/bottom_dialog_add_user_info_input_height_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_weight="100"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="키를 입력해주세요."
                        android:maxLength="3"
                        android:inputType="number"
                        android:singleLine="true"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_dialog_add_user_info_input_height_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="44dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/join_gray"
                    android:background="@color/white"

                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:id="@+id/bottom_dialog_add_user_info_input_weight_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:background="@drawable/view_gray_color_round_edge"
                    >
                    <EditText
                        android:id="@+id/bottom_dialog_add_user_info_input_weight_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_weight="100"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="몸무게를 입력해주세요."
                        android:maxLength="3"
                        android:inputType="number"
                        android:singleLine="true"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_dialog_add_user_info_input_weight_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="몸무게"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="44dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/join_gray"
                    android:background="@color/white"

                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:id="@+id/bottom_dialog_add_user_info_input_age_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:background="@drawable/view_gray_color_round_edge"
                    >
                    <EditText
                        android:id="@+id/bottom_dialog_add_user_info_input_age_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_weight="100"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="만 나이로 입력해주세요."
                        android:maxLength="3"
                        android:inputType="number"
                        android:singleLine="true"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_dialog_add_user_info_input_age_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="44dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/join_gray"
                    android:background="@color/white"

                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="374"

                    >

                    <TextView
                        android:id="@+id/bottom_dialog_add_user_info_male_textview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="남자"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/gray"
                        android:background="@drawable/view_gray_color_round_edge"
                        android:layout_weight="183"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        />

                    <TextView
                        android:id="@+id/bottom_dialog_add_user_info_female_textview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="여자"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/gray"
                        android:background="@drawable/view_gray_color_round_edge"
                        android:layout_weight="183"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_dialog_add_user_info_sex_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="44dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/join_gray"
                    android:background="@color/white"

                    />


            </FrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"

                />

            <TextView
                android:id="@+id/bottom_dialog_join_page_confirm_textview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="저장하기"
                android:gravity="center"
                android:background="@color/gray"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textSize="18dp"
                android:textStyle="normal"


                />

        </LinearLayout>





</LinearLayout>