<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.search_id_pw.pw_search_change_Activity"
        android:background="@color/white"
>

    <ScrollView
            android:id="@+id/id_search_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:background="@drawable/view_bottom_line"
            >
                <ImageView
                        android:id="@+id/pw_search_change_back_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        app:srcCompat="@drawable/back_button_image"
                        android:padding="18dp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:text="비밀번호 재설정"                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="#404040"
                        android:textStyle="normal"
                        android:includeFontPadding="false"
                />


            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="6dp"
                  android:background="#f9f9f9"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="새롭게 사용할 비밀번호를 입력해주세요."
                    android:gravity="center"
                    android:padding="10dp"
                    android:includeFontPadding="false"


            />

            <View android:layout_width="match_parent"
                  android:layout_height="6dp"
                  android:background="#f9f9f9"
            />

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
            >

                <LinearLayout
                        android:id="@+id/pw_search_change_input_pw_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="100"
                        android:background="@drawable/view_gray_color_round_edge"
                >
                    <EditText
                            android:id="@+id/pw_search_change_input_pw_edittext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:layout_weight="100"
                            android:background="@null"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="영어+숫자+특수문자를 포함한 8~16자리"
                            android:maxLength="16"
                            android:inputType="textPassword"
                            android:singleLine="true"
                    />



                </LinearLayout>

                <TextView
                        android:id="@+id/pw_search_change_input_pw_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="변경 비밀번호"
                        android:textSize="14dp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="44dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/join_gray"
                        android:background="@color/white"

                />


            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
            >

                <LinearLayout
                        android:id="@+id/pw_search_change_input_confirm_pw_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="100"
                        android:background="@drawable/view_gray_color_round_edge"
                >
                    <EditText
                            android:id="@+id/pw_search_change_input_confirm_pw_edittext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:layout_weight="100"
                            android:background="@null"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="위에 입력한 비밀번호를 재 입력해주세요."
                            android:maxLength="16"
                            android:inputType="textPassword"
                            android:singleLine="true"
                    />



                </LinearLayout>

                <TextView
                        android:id="@+id/pw_search_change_input_confirm_pw_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="변경 비밀번호 확인"
                        android:textSize="14dp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="44dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/join_gray"
                        android:background="@color/white"

                />


            </FrameLayout>

            <View
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
            />

        </LinearLayout>


    </ScrollView>



    <TextView
            android:id="@+id/pw_search_change_confirm_button_textview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="확인"
            android:gravity="center"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="18dp"
            android:textStyle="normal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"


            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>