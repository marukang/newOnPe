<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:fillViewport="true"
        tools:context=".login.login_page_Activity">

        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"

        >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

        >

            <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"


            />

            <ImageView
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:src="@drawable/login_logo"
               android:layout_marginStart="25dp"
                android:layout_marginBottom="5dp"
               android:gravity="left"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:textColor="#777777"
                    android:layout_marginLeft="28dp"
                    android:text="온 국민이 즐기는 인공지능 체육수업"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

            />


            <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
            >

                <EditText
                        android:id="@+id/login_page_input_id_edittext"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:hint="아이디를 입력해주세요."
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:background="@drawable/view_main_color_round_edge"
                />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="44dp"
                        android:paddingLeft="8dp"
                        android:background="@color/white"

                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/login_page_user_icon"
                            android:layout_gravity="center"
                            android:background="@color/white"
                        />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textStyle="normal"
                            android:textSize="14dp"
                            android:textColor="#3378fd"
                            android:text="아이디 입력"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@color/white"
                            android:includeFontPadding="false"
                    />

                </LinearLayout>


            </FrameLayout>

            <View
              android:layout_width="match_parent"
              android:layout_height="20dp"
            />

            <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"

            >

                <EditText
                        android:id="@+id/login_page_input_pw_edittext"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:hint="비밀번호를 입력해주세요."
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:inputType="textPassword"
                        android:background="@drawable/view_main_color_round_edge"
                />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="44dp"
                        android:paddingLeft="8dp"
                        android:background="@color/white"

                >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_login_page_lock"
                            android:layout_gravity="center"
                            android:background="@color/white"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textStyle="normal"
                            android:textSize="14dp"
                            android:textColor="#3378fd"
                            android:text="비밀번호 입력"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@color/white"
                            android:includeFontPadding="false"
                    />

                </LinearLayout>


            </FrameLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:gravity="center_vertical|right"
            >
                <TextView
                        android:id="@+id/login_page_search_id_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:textColor="#797979"
                        android:includeFontPadding="false"
                        android:text="아이디 찾기"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_kr_bold"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#797979"
                        android:includeFontPadding="false"
                        android:text="\u00b7"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                />
                <TextView
                        android:id="@+id/login_page_search_pw_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:textColor="#797979"
                        android:includeFontPadding="false"
                        android:text="비밀번호 찾기"
                />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:textColor="@color/main_color"
                    android:gravity="center"
                    android:text="아직 회원이 아니신가요?"
                    android:includeFontPadding="false"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
            />
                <TextView
                        android:id="@+id/login_page_join_textview"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:elevation="5dp"
                        android:textSize="14dp"
                        android:text="회원가입"
                        android:includeFontPadding="false"
                        android:textColor="@color/main_color"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:background="@drawable/view_white_color_round_edge"

                />

            <View
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
            />


        </LinearLayout>

        </ScrollView>
    <TextView
            android:id="@+id/login_page_login_textview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="로그인"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_gravity="bottom"


            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>