<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
>
    <LinearLayout
            android:id="@+id/self_class_parent_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/view_main_color_round_edge"

    >
        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
        >
            <TextView
                    android:id="@+id/self_class_select_category_1_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실습형 수업"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:background="@drawable/view_main_color_round_button"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/self_class_select_category_2_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경쟁"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:background="@drawable/view_main_color_round_button"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toEndOf="@+id/self_class_select_category_1_textview"/>


            <TextView
                    android:id="@+id/self_class_select_delete_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제하기"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    android:textColor="@color/join_gray"
                    android:background="@drawable/view_gray_color_2_round_edge"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:includeFontPadding="false"

                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
        >
            <TextView
                android:id="@+id/self_class_list_exercise_title_1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_color"
                android:textStyle="normal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:text="[농구]"
            />

            <TextView
                    android:id="@+id/self_class_list_exercise_title_2_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_color"
                    android:textStyle="normal"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="16dp"
                    android:includeFontPadding="false"
                    android:text="[공 다루기]"
                    android:layout_marginLeft="5dp"
            />
            <TextView
                    android:id="@+id/self_class_list_exercise_title_3_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_color"
                    android:textStyle="normal"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="16dp"
                    android:includeFontPadding="false"
                    android:text="[공다루기 동작]"
                    android:layout_marginLeft="5dp"
            />
        </LinearLayout>




    </LinearLayout>



</LinearLayout>