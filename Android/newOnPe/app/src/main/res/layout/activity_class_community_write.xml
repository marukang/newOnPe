<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".page.home.class_community_board.class_community_write_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="896"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="@drawable/view_bottom_line"
            >
            <ImageView
                android:id="@+id/class_community_write_back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                app:srcCompat="@drawable/back_button_image"
                android:padding="18dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:text="글 쓰기"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#404040"
                android:textStyle="normal"

                />


        </LinearLayout>

        <EditText
            android:id="@+id/class_community_write_input_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:hint="제목을 입력해주세요."
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textColor="#404040"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:background="#f9f9f9"
            android:maxLength="20"
            android:singleLine="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자 : "
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/class_community_write_user_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u00b7"
                android:textColor="#777777"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 작성일 : "
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />
            <TextView
                android:id="@+id/class_community_write_user_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2021-01-03 "
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f9f9f9"
            />

        <EditText
            android:id="@+id/class_community_write_input_content_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="405"
            android:ellipsize="end"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text=""
            android:hint="본문 내용을 작성하세요."
            android:gravity="top"
            android:background="@null"
            android:textColor="#404040"
            android:maxLength="200"
            android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f9f9f9"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="첨부 자료"
                android:textColor="#404040"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/class_community_write_add_file_button_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="첨부"
                android:textColor="#404040"
                android:textSize="13dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/view_gray_color_2_round_edge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/community_file_1_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_gray_color_round_edge"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="100"

                >
                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/clip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/community_file_1_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#9f9f9f"
                    android:text="파일을 첨부해주세요."
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="80"
                    />

                <TextView
                    android:id="@+id/community_file_1_delete_button_textview"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:text="삭제"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:includeFontPadding="false"

                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/community_file_2_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_gray_color_round_edge"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="100"

                >
                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/clip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/community_file_2_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#9f9f9f"
                    android:text="파일을 첨부해주세요."
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="80"
                    />

                <TextView
                    android:id="@+id/community_file_2_delete_button_textview"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:text="삭제"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:includeFontPadding="false"
                    />


            </LinearLayout>
        </LinearLayout>

     <!--   <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_community_write_file_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150"
            />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#f9f9f9"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="49"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/class_community_write_text_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:text="글 쓰기"
            android:gravity="center"
            android:background="@color/main_color"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="18dp"
            android:textStyle="normal"

            />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>