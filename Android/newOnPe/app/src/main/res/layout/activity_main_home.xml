<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_home_drawerview"
    android:background="@color/white"
    tools:context=".page.main.MainHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="896"
            >

            <View android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:layout_weight="40"
                android:weightSum="414"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/main_home_setting_button_imageview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/setting_icon"
                    />

                <View android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    />


                <ImageView
                    android:id="@+id/main_home_side_menu_button_imageview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/menu_button"
                    />
                <View android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    />



            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="13dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/main_home_student_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="정재환"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="님 안녕하세요."
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ninecco100@naver.com  010-4117-2727"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#777777"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"

                    />

                <TextView
                    android:id="@+id/student_recent_excercise_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#777777"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:weightSum="414"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="160"
                    app:cardElevation="0dp"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/main_home_student_profile_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />




                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="184"
                    android:weightSum="153"
                    >
                    <TextView
                        android:id="@+id/main_home_school_name_textview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:textColor="#777777"
                        android:text="- 학교"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:includeFontPadding="false"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/main_home_school_grade_textview"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textColor="@color/main_color"
                            android:includeFontPadding="false"
                            android:textSize="16dp"

                            />

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="학년"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textColor="@color/main_color"
                            android:includeFontPadding="false"
                            android:textSize="16dp"
                            android:layout_marginRight="8dp"
                            />
                        <TextView
                            android:id="@+id/main_home_school_class_textview"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textColor="@color/main_color"
                            android:includeFontPadding="false"
                            android:textSize="16dp"
                            />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="반"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textColor="@color/main_color"
                            android:includeFontPadding="false"
                            android:textSize="16dp"
                            />


                    </LinearLayout>


                    <View android:layout_width="62dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="51"
                        android:orientation="vertical"
                        android:weightSum="37"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="17"
                            android:textColor="#777777"
                            android:text="좌우명"
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textStyle="normal"
                            android:textSize="10dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/main_home_studnet_comment_textview"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:textColor="#777777"
                            android:text="좌우명을 입력해주세요."
                            android:fontFamily="@font/notosanscjkkr_medium"
                            android:textStyle="normal"
                            android:textSize="13dp"
                            android:includeFontPadding="false"
                            android:ellipsize="end"
                            />




                    </LinearLayout>


                    <TextView
                        android:id="@+id/main_home_mypage_button_textview"
                        android:layout_width="123dp"
                        android:layout_height="0dp"
                        android:layout_weight="35"
                        android:layout_marginTop="5dp"
                        android:text="마이페이지"
                        android:gravity="center"
                        android:textColor="#3f3f3f"
                        android:textSize="14dp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textStyle="normal"
                        android:background="@drawable/view_gray_color_round_edge"
                        android:includeFontPadding="false"
                        />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:textSize="18dp"
                android:textColor="#404040"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                />

            <!--기존 수업 리스트가 존재하는 경우 -->
            <LinearLayout
                android:id="@+id/main_home_class_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:weightSum="100"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/view_white_color_round_edge"
                >
                <View android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    />


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="50"
                    android:weightSum="374"

                    >

                    <ImageView
                        android:id="@+id/main_home_class_move_left_imageview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="43"
                        app:srcCompat="@drawable/main_color_left_button"
                        android:padding="12dp"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="288"
                        android:background="@drawable/view_main_color_round_button"

                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/main_home_class_name_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />


                    </LinearLayout>
                    <ImageView
                        android:id="@+id/main_home_class_move_right_imageview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="43"
                        app:srcCompat="@drawable/main_color_right_button"
                        android:padding="12dp"

                        />

                </LinearLayout>

                <me.relex.circleindicator.CircleIndicator2
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/circleindicator"
                    android:layout_weight="25"
                    app:ci_drawable="@drawable/main_color_circle"
                    app:ci_drawable_unselected="@drawable/gray_circle"
                    app:ci_orientation="horizontal"
                    app:ci_gravity="center"
                    app:ci_width="3dp"
                    app:ci_height="3dp"
                    />



            </LinearLayout>
            <!--기존 수업 리스트가 존재하지 않는 경우 -->
            <LinearLayout
                android:id="@+id/main_home_first_add_new_class_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:weightSum="100"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/view_white_color_round_edge"
                >



                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="50"
                    android:weightSum="374"

                    >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="21"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="288"
                        android:textSize="16dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginBottom="-3dp"
                        android:text="수업 코드를 입력하세요."
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textColor="@color/join_gray"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:background="@drawable/view_gray_color_2_round_edge"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        />
                    <ImageView
                        android:id="@+id/add_new_class"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="44"
                        app:srcCompat="@drawable/side_menu_right_image"
                        />

                </LinearLayout>




            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="15dp"
                />

            <LinearLayout
                android:id="@+id/main_home_menu_linearlayout_1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:weightSum="374"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >



                <LinearLayout
                    android:id="@+id/main_home_class_enter_textview_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="374"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/view_main_color_round_button"
                    >


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입장하기"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:paddingRight="8dp"
                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/white_right_arrow"
                        />

                </LinearLayout>




            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="9dp"
                />

            <LinearLayout
                android:id="@+id/main_home_menu_linearlayout_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:weightSum="374"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                >
                <LinearLayout
                    android:id="@+id/main_home_add_new_class_linearlayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="183"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/view_gray_color_2_round_edge"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/plus_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신규 수업 추가"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:textColor="#595959"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:paddingLeft="8dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="183"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/view_gray_color_2_round_edge"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/pencile_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지난 수업"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:textColor="#595959"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:paddingLeft="8dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    />

                <LinearLayout
                    android:id="@+id/main_home_community_button_linearlayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="183"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/view_gray_color_2_round_edge"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/community_image"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니케이션"
                        android:textStyle="normal"
                        android:textSize="16dp"
                        android:textColor="#595959"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:includeFontPadding="false"
                        android:paddingLeft="8dp"
                        />


                </LinearLayout>




            </LinearLayout>


            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                />


            <TextView
                android:id="@+id/main_home_notice_button_textview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:includeFontPadding="false"
                android:text="새 소식"
                android:layout_weight="60"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_main_color_round_button"
                android:gravity="center"
                android:layout_marginTop="15dp"
                />

            <View android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="15"
                />
            <TextView
                android:id="@+id/main_home_self_class_button_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/main_color"
                android:textSize="16dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:includeFontPadding="false"
                android:text="온라인 체육수업 (인공지능 체육 수업)"
                android:layout_weight="60"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_main_color_2_round_button"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="14dp"
                />

            <TextView
                android:id="@+id/main_home_content_button_textview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="@color/main_color"
                android:textSize="16dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:textStyle="normal"
                android:includeFontPadding="false"
                android:text="방과 후 활동"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/view_main_color_2_round_button"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />


            <!--

                    -->
        </LinearLayout>


    </ScrollView>

    <include layout="@layout/activity_side_menu"
        android:id="@+id/main_home_child_drawerview"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/view_side_round_edge"
        android:orientation="vertical"
        android:weightSum="896"
        android:layout_gravity="right"/>

</androidx.drawerlayout.widget.DrawerLayout>