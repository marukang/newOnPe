<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".page.management.self_class_select_exercise_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="896"
            android:orientation="vertical"
                  >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/view_bottom_line"
        >
            <ImageView

                    android:id="@+id/self_class_select_exercise_back_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    app:srcCompat="@drawable/back_button_image"
                    android:padding="18dp"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:text="직접 선택하기"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#404040"
                    android:textStyle="normal"

            />



        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="52"
                android:weightSum="414"
                android:gravity="center_vertical"
                android:orientation="horizontal"
        >
            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="19"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/select_exercise_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/view_main_color_round_edge"
            >

                <TextView
                    android:id="@+id/select_exercise_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="종목"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/main_color"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/main_color_down_arrow" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="6"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/select_exercise_category_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/view_gray_color_round_edge"
            >

                <TextView
                    android:id="@+id/select_exercise_category_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="대분류"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/select_exercise_category_arrow_imageview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/select_exercise_category_arrow_imageview"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/gray_color_down_arrow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="6"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/select_exercise_detail_name_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/view_gray_color_round_edge"
            >

                <TextView
                    android:id="@+id/select_exercise_detail_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="동작명"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/select_exercise_detail_name_arrow_imageview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/select_exercise_detail_name_arrow_imageview"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/gray_color_down_arrow" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="16"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/select_exercise_add_button_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="68"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/view_gray_color_2_round_edge"
            >
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:text="추가 하기"
                          android:textColor="@color/white"
                          android:fontFamily="@font/notosanscjkkr_medium"
                          android:textStyle="normal"
                          android:gravity="center"
                          android:textSize="12dp"
                          android:includeFontPadding="false"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>



            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="19"
            />

        </LinearLayout>

        <View
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="6"
         android:background="#f9f9f9"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/self_class_select_exercise_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="492"
                android:paddingTop="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        />


        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="#f9f9f9"
        />


        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="@color/white"
        />

        <TextView
                android:id="@+id/self_class_start_button_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:textStyle="normal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:background="@drawable/view_gray_color_2_round_edge"
                android:text="수업 시작"
                android:gravity="center"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="@color/white"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:textStyle="normal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textColor="@color/main_color"
                android:background="@drawable/view_main_color_round_edge"
                android:text="수업 결과 확인"
                android:gravity="center"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="@color/white"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:textStyle="normal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textColor="@color/main_color"
                android:background="@drawable/view_main_color_round_edge"
                android:text="초기화"
                android:gravity="center"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:background="@color/white"
        />


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>