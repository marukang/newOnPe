<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/notice_recyclerview_parent_linearlayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        >
        <TextView
            android:id="@+id/notice_recyclerview_number_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_color"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="13dp"

            />

        <TextView
            android:id="@+id/notice_recyclerview_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항입니다."
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#404040"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/notice_recyclerview_user_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자"
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/notice_recyclerview_side_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u00b7"
                android:textColor="#777777"
                android:fontFamily="@font/notosans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"

                />
            <TextView
                android:id="@+id/notice_recyclerview_write_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-01-03 "
                android:textColor="#777777"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="13dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#f1f1f1"
        />

</LinearLayout>